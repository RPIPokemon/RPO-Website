@require variables
@require nib

// angular-parallax
.background
    position relative
    background-attachment fixed
    background-repeat no-repeat

.home-background
    height calc(100vh - 50px)
    background-image url('img/rpi_photo.jpg')

// categories on home page
.category-box
    background-color RPO_blue
    padding 0 10px
    border 2px solid white
    border-radius 10px

    .category-title
        text-align center

    .category-title, p
        color RPO_white
