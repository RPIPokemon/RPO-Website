@require variables
@require nib

// angular-parallax
.background
    position relative
    background-attachment fixed
    background-repeat no-repeat

.home-background
    height calc(100vh - 50px)
    background-image url('img/campus_skyview.jpg')

.home-banner
    // padding-top 3vh
    margin-top 20vh
    padding-top 5vh
    min-hight 500px
    text-align center
    background-color rgba(RPO_blue, .75)

    h1, h2, h3, h4, h5, h6, p
        color RPO_white

// categories on home page
.category-box
    background-color RPO_blue
    padding 0 10px
    border 2px solid white
    border-radius 10px

    .category-title
        text-align center

    .category-title, p
        color RPO_white
